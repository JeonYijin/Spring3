<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.ae.ae1.bankbook.BankbookDAO">
	
	<update id="setUpdate" parameterType="com.ae.ae1.bankbook.BankbookDTO">
		UPDATE BANKBOOK SET BOOK_NAME=#{book_name}, BOOK_RATE=#{book_rate}, BOOK_SALE=#{book_sale}
		WHERE BOOK_NUM=#{book_num}
	</update>
	
	
	<delete id="setDelete" parameterType="java.lang.Long">
		DELETE BANKBOOK WHERE BOOK_NUM=#{book_num} 
	</delete>
	
	<select id="getSelect" parameterType="com.ae.ae1.bankbook.BankbookDTO" resultType="com.ae.ae1.bankbook.BankbookDTO">
		Select * from BANKBOOK WHERE BOOK_NUM=#{book_num}
	</select>
  
  	<select id="getList" resultType="com.ae.ae1.bankbook.BankbookDTO" parameterType="com.ae.ae1.util.Pager">
  		SELECT * FROM
    			(SELECT ROWNUM R, BK.* FROM
        		(select * from BANKBOOK
        		 where
        		 <choose>
        		 	<when test="kind == 'num'">
        		 		book_num
        		 	</when>
        		 	
        		 	<when test="kind == 'name'">
        		 		book_name
        		 	</when>
					<otherwise>
						book_rate
					</otherwise>        		 	
        		 
        		 </choose> 
        		 
        		 like '%' || #{search} || '%' 
        		order by book_num DESC) BK)
			WHERE R BETWEEN #{startRow} AND #{lastRow}
  	
  	</select>
  	
  	<insert id="setInsert" parameterType="com.ae.ae1.bankbook.BankbookDTO">
  		INSERT INTO BANKBOOK(BOOK_NUM, BOOK_NAME, BOOK_RATE, BOOK_SALE) 
  		VALUES(ACCOUT_SEQ.NEXTVAL,#{book_name}, #{book_rate}, #{book_sale})
		  	
  	</insert>
  
  	<select id="getTotalCount" resultType="java.lang.Long" parameterType="com.ae.ae1.util.Pager">
		SELECT COUNT(BOOK_NUM) FROM BANKBOOK
		where
        	<choose>
        		 	<when test="kind == 'num'">
        		 		book_num
        		 	</when>
        		 	
        		 	<when test="kind == 'name'">
        		 		book_name
        		 	</when>
					<otherwise>
						book_rate
					</otherwise>        		 	
        		 
        		 </choose> 
        		 
        		 like '%' || #{search} || '%' 
		
  	</select>
  
  </mapper>